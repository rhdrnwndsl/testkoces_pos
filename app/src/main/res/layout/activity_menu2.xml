<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".menu2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/titlebg_gradient"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.98"
                android:gravity="center"
                android:text="@string/txt_set_title"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02"
                android:background="#FFFFFF"  />

        </LinearLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:gravity="center_vertical|center_horizontal"
            android:background="#0089d0"
            app:tabTextAppearance="@style/tab_text"
            app:tabMode="fixed"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabSelectedTextColor="#FF0000"
            app:tabIndicatorColor="#FF0000">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/frag_btn_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_device" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/frag_btn_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_networkinfo" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_btn_verinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_verinfo" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/frag_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg1">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/menu2_btn_gotomain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/button211221"
                android:text="@string/btn_goto_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu2_btn_storeInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.33"
                android:background="@drawable/button211221"
                android:text="@string/btn_store_info"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu2_btn_env"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34"
                android:background="@drawable/button211221"
                android:text="@string/btn_settiong"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>