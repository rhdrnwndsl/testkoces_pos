<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentsetBle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:padding="10dp"
    tools:context=".fragment.frag_device_ble">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="블루투스 리더기 설정"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#0089d0" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="리더기 설정"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="100dp"
                android:background="#000000"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="@string/frgble_isConnected"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/frgBle_txt_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_touchSignpad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="터치서명크기"
                android:textColor="#000000" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"

                android:gravity="center"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_f_size_signpad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/mySpinnerItemStyle"
                    android:entries="@array/spinner_touch_signpad_size"
                    android:gravity="center_vertical"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <Button
                android:id="@+id/frgBle_Connect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/button211221"
                android:text="@string/frgble_Connect"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/frgBle_DisConnect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/button211221"
                android:text="@string/frgble_DisConnect"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="페어링 해제 후 전원"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="100dp"
                android:background="#000000"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"

                android:gravity="center"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_f_power_manage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/mySpinnerItemStyle"
                    android:entries="@array/spinner_ble_power_manage"
                    android:gravity="center_vertical"
                    android:textAlignment="center" />
            </LinearLayout>
            <Button
                android:id="@+id/frgBle_power"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/button211221"
                android:text="@string/frgble_power"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="리더기 정보"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="100dp"
                android:background="#000000"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:text="@string/frgble_bleproductnumber"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/frgble_tvw_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@drawable/rectangle"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:text="@string/frgble_bleproductserial"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/frgble_tvw_serial"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@drawable/rectangle"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:text="@string/frgble_bleproductversion"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/frgble_tvw_ver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@drawable/rectangle"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frgble_btn_keydown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button211221"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:text="@string/btn_key_reset" />

            <Button
                android:id="@+id/frgble_btn_firmupdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button211221"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:text="@string/btn_upgrade_reader" />

            <Button
                android:id="@+id/frgble_btn_verity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button211221"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:text="@string/btn_classfi_check" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frgBle_Save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/buttonround211221"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/frgble_save" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>