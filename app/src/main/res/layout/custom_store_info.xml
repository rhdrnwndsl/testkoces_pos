<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@drawable/corners"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.3"
            android:text="사업자번호"
            android:gravity="center"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edit_bsn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.7"
            android:maxLength="10"
            android:hint="내용입력"
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.3"
            android:text="가맹점명"
            android:gravity="center"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edit_storename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.7"
            android:hint="내용입력"
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.3"
            android:text="전화번호"
            android:gravity="center"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edit_storephone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.7"
            android:hint="내용입력"
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.3"
            android:text="가맹점주소"
            android:gravity="center"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edit_storeaddr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.7"
            android:hint="내용입력"
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.3"
            android:text="대표자명"
            android:gravity="center"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edit_storeowner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="0.7"
            android:hint="내용입력"
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_storeinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/button211221"
            android:text="@string/btn_cancel"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_ok_storeinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/button211221"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>